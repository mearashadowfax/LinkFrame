---
const { title, id, secondId, value, min, max, step } = Astro.props;

interface Props {
  title: string;
  id: string;
  secondId: string;
  value: number;
  min: number;
  max: number;
  step?: number;
}
---

<div class="max-w-md lg:max-w-xs mx-auto p-4">
  <div class="flex items-center justify-between">
    <p class="text-lg font-medium text-slate-800">{title}</p>
    <input
      id={id}
      type="number"
      class="border-light min-w-10 justify-center rounded-lg border border-slate-200 p-1 text-center text-sm font-normal outline-none focus:border-sky-500 focus:ring-sky-500"
      value={value}
      min={min}
      max={max}
      step={step}
      oninput={`document.getElementById('${secondId}').value = this.value`}
    />
  </div>
  <input
    id={secondId}
    class="mt-3 w-full accent-sky-600 cursor-pointer"
    type="range"
    value={value}
    min={min}
    max={max}
    step={step}
    oninput={`document.getElementById('${id}').value = this.value`}
  />
</div>