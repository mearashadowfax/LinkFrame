---
import Dropzone from "@ui/Dropzone.astro";
import ColorPicker from "@ui/ColorPicker.astro";
import RangeSlider from "@ui/RangeSlider.astro";
import InputNumber from "@ui/InputNumber.astro";
import Footer from "@common/Footer.astro";
---

<div class="relative bg-linear-to-tl from-blue-100 via-transparent">
  <div class="mx-auto max-w-340 px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="grid items-start gap-8 lg:grid-cols-2 lg:gap-12">
      <div class="w-full lg:max-w-xs lg:mx-0 order-last lg:order-first">
        <RangeSlider
          title="Rotate"
          id="rotateValue"
          secondId="rotateSlider"
          value={0}
          min={-180}
          max={180}
          step={1}
        />

        <RangeSlider
          title="Scale"
          id="scaleValue"
          secondId="scaleSlider"
          value={1}
          min={0.1}
          max={1.9}
          step={0.1}
        />

        <ColorPicker
          title="Image Background Color"
          hexInputId="hexInput1"
          colorPickerId="colorPicker1"
          randomBtnId="randomBtn1"
        />

        <ColorPicker
          title="Frame Color"
          hexInputId="hexInput2"
          colorPickerId="colorPicker2"
          randomBtnId="randomBtn2"
        />

        <RangeSlider
          title="Frame Thickness"
          id="frameThicknessValue"
          secondId="frameThicknessSlider"
          value={50}
          min={0}
          max={100}
        />

        <RangeSlider
          title="Frame Start Position"
          id="startPositionValue"
          secondId="startPositionSlider"
          value={16}
          min={0}
          max={100}
        />

        <RangeSlider
          title="Frame End Position"
          id="endPositionValue"
          secondId="endPositionSlider"
          value={56}
          min={0}
          max={100}
        />

        <div class="max-w-md lg:max-w-xs mx-auto p-4">
          <div class="mb-3">
            <p class="text-lg font-medium text-slate-800">Frame Text</p>
          </div>

          <label for="frameTextInput" class="sr-only">Frame Text</label>
          <input
            type="text"
            id="frameTextInput"
            class="block w-full rounded-lg border-slate-200 px-4 py-3 text-base focus:border-sky-500 focus:ring-sky-500"
            placeholder="#ONTHEHUNT"
          />
        </div>

        <ColorPicker
          title="Frame Text Color"
          hexInputId="hexInput3"
          colorPickerId="colorPicker3"
          randomBtnId="randomBtn3"
        />

        <InputNumber
          title="Font Size"
          id="fontSizeInput"
          dataInput="data-hs-input-font-size"
          dataIncrement="data-hs-input-font-size-increment"
          dataDecrement="data-hs-input-font-size-decrement"
        />

        <InputNumber
          title="Letter Spacing"
          id="letterSpacingInput"
          dataInput="data-hs-input-letter-spacing"
          dataIncrement="data-hs-input-letter-spacing-increment"
          dataDecrement="data-hs-input-letter-spacing-decrement"
        />

        <RangeSlider
          title="Text Placement"
          id="textPlacementValue"
          secondId="textPlacementSlider"
          value={130}
          min={0}
          max={200}
        />
      </div>

      <div class="sticky-column">
        <Dropzone />
      </div>
    </div>
  </div>
  <Footer />
</div>
